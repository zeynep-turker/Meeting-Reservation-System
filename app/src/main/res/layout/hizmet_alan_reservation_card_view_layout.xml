<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/hizmet_alan_reservation_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_green"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/app_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/profil_image_card"
                android:layout_width="100dp"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="@id/root"
                app:layout_constraintTop_toTopOf="@id/root"
                >
                <ImageView
                    android:id="@+id/hizmet_veren_profil_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_page"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/profil" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/hizmet_veren_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/profil_image_card"
                app:layout_constraintTop_toTopOf="@id/root"
                app:layout_constraintBottom_toTopOf="@id/hizmet_veren_job"
                android:text="@string/name_surname"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:id="@+id/hizmet_veren_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/profil_image_card"
                app:layout_constraintTop_toBottomOf="@id/hizmet_veren_name"
                app:layout_constraintBottom_toTopOf="@id/randevu_tarih"
                android:text="@string/job"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/randevu_tarih"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="@string/tarih"
                app:layout_constraintTop_toBottomOf="@id/hizmet_veren_job"
                app:layout_constraintStart_toEndOf="@id/profil_image_card"
                app:layout_constraintBottom_toTopOf="@id/meeting_id_layout"
                app:layout_constraintEnd_toStartOf="@id/date_layout"
                android:textSize="13sp"
                />
            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@id/hizmet_veren_job"
                app:layout_constraintStart_toEndOf="@id/randevu_tarih"
                >
                <TextView
                    android:id="@+id/randevu_saat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/tarih"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/randevu_pmOrAm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:text="@string/tarih"
                    android:textSize="13sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/meeting_id_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/randevu_tarih"
                app:layout_constraintStart_toEndOf="@id/profil_image_card"
                app:layout_constraintBottom_toTopOf="@id/meeting_password_layout"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplantı ID : "
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/meeting_id_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="10sp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/meeting_password_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/meeting_id_layout"
                app:layout_constraintStart_toEndOf="@id/profil_image_card"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Şifre : "
                    android:textColor="@color/black"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/meeting_password_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="10sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/kredi_karti_ile_odeme"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/round_corner"
                android:text="@string/kredi_kart"
                android:textSize="10sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"

                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/meeting_password_layout"
                app:layout_constraintEnd_toStartOf="@id/dekont_yolla"
                app:layout_constraintStart_toEndOf="@+id/profil_image_card"
                app:layout_constraintBottom_toBottomOf="@id/root"
                />
            <Button
                android:id="@+id/dekont_yolla"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/round_corner"
                android:text="@string/dekont"
                android:textSize="10sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/kredi_karti_ile_odeme"
                app:layout_constraintTop_toBottomOf="@id/meeting_password_layout"
                app:layout_constraintEnd_toEndOf="@id/root"
                app:layout_constraintBottom_toBottomOf="@id/root"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>